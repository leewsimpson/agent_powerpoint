# OpenAI Configuration
# Choose between standard OpenAI or Azure OpenAI by setting USE_AZURE
USE_AZURE=false

# Standard OpenAI Configuration (when USE_AZURE=false)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o-mini

# Azure OpenAI Configuration (when USE_AZURE=true)
# AZURE_OPENAI_API_KEY: Your Azure OpenAI API key from the Azure portal
# AZURE_OPENAI_ENDPOINT: Your Azure OpenAI resource BASE endpoint only - DO NOT include /openai/deployments or /openai/responses
#                         Example: https://your-resource.openai.azure.com (correct)
#                         NOT: https://your-resource.openai.azure.com/openai/responses (incorrect)
# AZURE_OPENAI_DEPLOYMENT: The deployment name you created in Azure OpenAI Studio (e.g., gpt-4o-deployment)
# AZURE_OPENAI_API_VERSION: The API version to use (see https://learn.microsoft.com/azure/ai-services/openai/reference)
#                           Recommended: 2024-10-21 or 2024-08-01-preview
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-10-21

# Mock mode - set to true to use mock responses instead of calling the API
OPENAI_USE_MOCK=false

# Reasoning effort for reasoning models (o1, o3): low, medium, high
OPENAI_REASONING_EFFORT=medium

# Behavior Configuration
MAX_SCRIPT_RETRIES=3
MAX_IMPROVEMENT_ITERATIONS=2
EXECUTION_TIMEOUT_SECONDS=120
TARGET_SCORE_THRESHOLD=80

# Input/Output Configuration
WORKSPACE_DIR=.
DEFAULT_OUTPUT_DIR=./runs

# Score Weights (must sum to 1.0)
SCORE_WEIGHT_COMPLETENESS=0.3
SCORE_WEIGHT_CONTENT_ACCURACY=0.3
SCORE_WEIGHT_LAYOUT_MATCH=0.25
SCORE_WEIGHT_VISUAL_QUALITY=0.15
